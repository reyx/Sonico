@model Reyx.Web.Sonico.Models.User

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>User</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Culture</div>
    <div class="display-field">@Model.Culture</div>

    <div class="display-label">Groups</div>
    <div class="display-field">@(Model.Groups == null ? "None" : Model.Groups.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


